{
  "compilerOptions": {
    "target": "ES2020",                     // Vers찾o JS que o Node entende
    "module": "commonjs",                   // Sistema de m처dulos do Node
    "rootDir": "src",                       // Pasta raiz do c처digo
    "outDir": "dist",                       // Pasta onde o TS compila os arquivos JS
    "strict": true,                         // Ativa todas as checagens de tipo
    "esModuleInterop": true,                // Permite importar m처dulos comuns do Node corretamente
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
